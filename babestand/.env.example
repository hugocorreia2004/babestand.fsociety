# ============================================
# BabeStand - Variáveis de Ambiente
# ============================================
# Copiar para .env e preencher com valores reais
# NUNCA fazer commit do ficheiro .env
# ============================================

# Site
SITE_URL=https://babestand.example.com
SITE_NAME=BabeStand
SITE_DOMAIN=babestand.example.com

# Base de Dados
DB_HOST=localhost
DB_NAME=babestand
DB_USER=seu_usuario
DB_PASS=sua_password_segura
DB_CHARSET=utf8mb4

# Email (SMTP)
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_ENCRYPTION=tls
MAIL_USERNAME=noreply@example.com
MAIL_PASSWORD=sua_password_smtp
MAIL_FROM_ADDRESS=noreply@example.com
MAIL_FROM_NAME=BabeStand
ADMIN_EMAIL=admin@example.com

# Segurança
SESSION_LIFETIME=3600
TOKEN_EXPIRY_MINUTES=15
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=30
REMEMBER_ME_DAYS=30

# Upload
UPLOAD_MAX_SIZE=5242880

# Debug (false em produção!)
DEBUG_MODE=false
